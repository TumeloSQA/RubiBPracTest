@using System.Data

@model DataSet

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Student Details";
}

<html>
<head>
    <!-- Bootstrap -->
    <link href="./Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="./Content/bootstrap.min.css" rel="stylesheet" />
    <link href="./Content/stylesheet.css" rel="stylesheet" />

    <link href="~/Content/dataTables.bootstrap.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css" type="text/css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/1.2.4/css/buttons.dataTables.min.css" type="text/css" rel="stylesheet" />
    <link href="http://cdn.datatables.net/tabletools/2.2.4/css/dataTables.tableTools.css" type="text/javascript" rel="stylesheet" />

    <style type="text/css">
        #myTable {
            /*border-collapse: collapse;*/
            width: 100%;
            border: 1px solid #ddd;
            font-size: 14px;
        }

        th, td {
            border: 1px solid black;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Student Management</title>
</head>
<body>
    <br />
    <br />
    <fieldset>
        <legend class="container">Student Registration Details</legend>
        <table cellpadding="0" cellspacing="0" class="table table-striped table-responsive table-bordered table-condensed" id="myTable">
            <tr>
                <th>First Name</th>
                <th>Surname</th>
                <th>Course Name</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>

            @foreach (DataRow row in Model.Tables[0].Rows)
            {
                <tr>
                    <td>@row["FirstName"]</td>
                    <td>@row["Surname"]</td>
                    <td>@row["CourseName"]</td>
                    <td>@row["Start Date"]</td>
                    <td>@row["End Date"]</td>
                </tr>

                if (Model.Tables[0].Rows.Equals(0))
                {
                    <tr><th>Student Not Registered for Courses</th></tr>
                }
            }

        </table>
        <div>
            @Html.ActionLink("Back to List", "Index", "StudentManagement")
        </div>
    </fieldset>
</body>
</html>